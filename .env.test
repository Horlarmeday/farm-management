# Test Environment Configuration
NODE_ENV=test
PORT=5001
HOST=localhost

# Database Configuration
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=kuyash_fms_test
DB_USERNAME=root
DB_PASSWORD=
DB_SYNCHRONIZE=true
DB_LOGGING=false
DB_SSL=false
DB_DROP_SCHEMA=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# JWT Configuration
JWT_SECRET=test-jwt-secret-key-for-testing-purposes-only
JWT_REFRESH_SECRET=test-jwt-refresh-secret-key-for-testing-purposes-only
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGINS=http://localhost:5173
CORS_CREDENTIALS=true
CORS_ALLOWED_HEADERS=Origin, X-Requested-With, Content-Type, Accept, Authorization
CORS_EXPOSED_HEADERS=X-Pagination-Count
CORS_METHODS=GET, POST, PUT, PATCH, DELETE, OPTIONS

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,csv

# Email Configuration (disabled for testing)
MAIL_HOST=
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=
MAIL_PASSWORD=
MAIL_FROM=test@kuyash-fms.com
MAIL_FROM_NAME=Kuyash Farm Management System Test

# Storage Configuration
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=uploads
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# WebSocket Configuration
WS_ENABLED=true
WS_CORS_ORIGINS=http://localhost:5173

# Logging Configuration
LOG_LEVEL=error
LOG_FILE_ENABLED=false
LOG_FILE_PATH=logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Security Configuration
BCRYPT_ROUNDS=4
SESSION_SECRET=test-session-secret-key-for-testing-purposes-only
ENCRYPTION_KEY=test-encryption-key-32-chars-long-for-testing-purposes
HELMET_ENABLED=false
TRUST_PROXY=false

# API Documentation
SWAGGER_ENABLED=false
SWAGGER_PATH=/api-docs

# Monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false

# Backup
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Notifications
NOTIFICATION_ENABLED=false
SMS_PROVIDER=
SMS_API_KEY=
SMS_FROM=

# Push Notifications
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@farmmanagement.com

# Feature Flags
FEATURE_AUDIT_LOGS=false
FEATURE_REAL_TIME_UPDATES=false
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_MOBILE_APP=false

# Development
DEV_SEED_DATA=false
DEV_RESET_DB=true
DEV_MOCK_SERVICES=true