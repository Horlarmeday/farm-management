        {
          "src": "/icons/shortcut-dashboard.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Livestock",
      "short_name": "Livestock",
      "description": "Manage livestock and animal health",
      "url": "/livestock",
      "icons": [
        {
          "src": "/icons/shortcut-livestock.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Inventory",
      "short_name": "Inventory",
      "description": "Track supplies and equipment",
      "url": "/inventory",
      "icons": [
        {
          "src": "/icons/shortcut-inventory.png",
          "sizes": "96x96",
          "type": "image/png"
